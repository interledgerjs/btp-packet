    "dateformat": "^3.0.3",
    "oer-utils": "^4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/dateformat": "^1.0.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.0",
    "benchmark": "^2.1.4",
